<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        card_view:cardBackgroundColor="@color/light_grey"
        card_view:cardMaxElevation="12dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="10sp"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:textSize="20sp"
                android:layout_margin="10sp"
                android:textColor="@color/purple_200"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintBottom_toTopOf="@id/button1"
                android:text="TextViefgjhfvhjfvjhcfvjhcvjhcvghcjhcjhc gjcgjcjgcf jgjcjvjhcgvjffgcfgcvjjhcgjgjjhcjcgcjgcjhw" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button1"
                android:background="@drawable/mybutton"
                android:layout_width="0dp"
                android:layout_marginEnd="5sp"
                android:layout_marginBottom="10sp"
                android:layout_height="wrap_content"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toStartOf="@id/button2"
                card_view:layout_constraintBottom_toTopOf="@id/button3"
                card_view:layout_constraintTop_toBottomOf="@id/textView2"
                android:text="Button" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button2"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:background="@drawable/mybutton"
                card_view:layout_constraintStart_toEndOf="@id/button1"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/textView2"
                card_view:layout_constraintBottom_toTopOf="@id/button4"
                android:text="Button" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button3"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:paddingTop="10sp"
                android:background="@drawable/mybutton"
                android:layout_marginBottom="10sp"
                android:layout_marginEnd="5sp"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toStartOf="@id/button4"
                card_view:layout_constraintTop_toBottomOf="@id/button1"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:text="Button" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button4"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="Button"
                android:background="@drawable/mybutton"
                android:layout_marginBottom="10sp"
                android:layout_marginStart="5sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toEndOf="@id/button3"
                card_view:layout_constraintTop_toBottomOf="@id/textView2"
                card_view:layout_constraintVertical_bias="1.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>